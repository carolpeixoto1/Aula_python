while True:
    try:
        num1 = float(input("Digite um numero: "))
        num2 = float(input("Digite o segundo numero: "))
        operacao = input("Digite a operação (+, -, *, /): ")

        if operacao == "+":
            resultado = num1+num2
        elif operacao == "-":
            resultado = num1-num2
        elif operacao == "*":
            resultado = num1*num2
        elif operacao == "/":
            if num2 == 0:  
                print("Erro: Divisao por zero não é permitida.Tente novamente.\n")
                continue
            resultado = num1 / num2
        else:
            print("erro: operação inválida tente novamente\n")
            continue
     