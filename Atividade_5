idade = int(input("Por favor, digite sua idade: "))

if 0 <= idade <= 12:
    categoria = "Criança"
elif 13 <= idade <= 17:
    categoria = "Adolescente"
elif 18 <= idade <= 59:
    categoria = "Adulto"
else:  # idade >= 60
    categoria = "Idoso"

print(f"Você tem {idade} anos, e sua categoria é: {categoria}.")